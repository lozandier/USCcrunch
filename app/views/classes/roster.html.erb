<div class="span4">

  <div class="box_l1_ep">
    <% if @user.role == 'student' %>
      <%= @user.class_photo.present? ? image_tag(@user.class_photo.url(:original),:height => '50px', :width => '50px' , :class => "profile_pic img-rounded") : image_tag("/assets/profile_pic_student.png",:height => '50px', :width => '50px' , :class => "profile_pic img-rounded") %>
    <% else %>
      <%= @user.class_photo.present? ? image_tag(@user.class_photo.url(:original),:height => '50px', :width => '50px' , :class => "profile_pic img-rounded") : image_tag("/assets/profile_pic_instructor.png",:height => '50px', :width => '50px' , :class => "profile_pic img-rounded") %>
    <% end %>
    <h3 class="profile_name"><%= @user.class_name.present? ? @user.class_name : "Class" %></h3>
    <%= link_to "View my profile page", profile_path(@user), :class => "view_my_profile_page" %>
  </div>


  <div class="box_l1_hp">
    <%= link_to "<button class='side_nav_button profile' type=button'>Class<img class='arrow' src='/assets/arrow.png' height='10px' width='10px'></button>".html_safe, edit_class_path(@user) %>
    <%= link_to "<button class='side_nav_button posts for_notifications active_button' type=button'>Roster<img class='arrow' src='/assets/arrow.png' height='10px' width='10px'></button>".html_safe, roster_class_path(@user) %>
    <%= link_to "<button class='side_nav_button posts for_notifications' type=button'>Invite Students<img class='arrow' src='/assets/arrow.png' height='10px' width='10px'></button>".html_safe, invite_students_class_path(@user) %>
    <%= link_to "<button class='side_nav_button posts for_notifications' type=button'>FAQ's<img class='arrow' src='/assets/arrow.png' height='10px' width='10px'></button>".html_safe, class_faqs_path(@user) %>
    <%= link_to "<button class='side_nav_button posts for_notifications' type=button'>Readings<img class='arrow' src='/assets/arrow.png' height='10px' width='10px'></button>".html_safe, class_readings_path(@user) %>
    <%= link_to "<button class='side_nav_button password' type=button'>Important Links<img class='arrow' src='/assets/arrow.png' height='10px' width='10px'></button>".html_safe, class_importent_links_path(@user) %>
  </div>

  <div class="box_l3_hp">
    <div class="link_box">
      &#169; &nbsp 2012 &nbsp EduPosts &nbsp More links go here
    </div>
  </div>
</div>

<div class="span8" id="posts" style="min-height: 700px;">
  <h2 class="posts_title">Roster</h2>
  <div class="first_box"></div>
  <% for student in @users %>
    <div id ="student_<%= student.id %>">
      <div class="post" style="border-bottom-color: #E8E8E8;border-bottom-style: solid;border-bottom-width: 1px;height: auto;width: 100%;">
        <%= student.avatar.present? ? image_tag(student.avatar.url(:original) , :width => '50px;', :height => '50px;', :class => "profile_pic img-rounded") : image_tag("/assets/profile_pic_student.png",:width => '50px;',:height => '50px;' , :class => "profile_pic img-rounded") %>
        <div class="search_result_people_name"><%= link_to student.fullname, profile_path(student)%></div>
        <p class="search_result_people_at_name"><%= student.username %></p>
        <div class="stats_box">
          <div class="stats_box_time_row">
            <%= link_to "1d", graphs_class_path(student, :point => '1d'), :remote => true  %>
            <%= link_to "5d", graphs_class_path(student, :point => '5d'), :remote => true  %>
            <%= link_to "1m", graphs_class_path(student, :point => '1m'), :remote => true  %>
            <%= link_to "2m", graphs_class_path(student, :point => '2m'), :remote => true  %>
            <%= link_to "3m", graphs_class_path(student, :point => '3m'), :remote => true  %>
            <%= link_to "All", graphs_class_path(student, :point => 'all'), :remote => true  %>
          </div>
          <div class="stats_box_row">
            Posts <span class="stats_num"><%= student.tweets.where('reply IS NULL and post_box IS NULL').count %></span>
          </div>
          <div class="stats_box_row">
            Replies <span class="stats_num"><%= student.tweets.where('reply IS NOT NULL and post_box IS NULL').count %></span>
          </div>
          <div class="stats_box_row">
            Time Online <span class="stats_num">125h</span>
          </div>
          <div class="stats_box_row">
            Favorites <span class="stats_num">15</span>
          </div>
          <div class="stats_box_row">
            Favorited <span class="stats_num">15</span>
          </div>
        </div>
        <%= link_to "Analytics", graphs_class_path(student), :style => 'display:none;float: right;position: relative;',:class => 'btn', :id => "ana_#{student.id}", :remote => true  %>
        <span id="chart_<%= student.id %>" style="float: left;left: 9px;position: relative;width: 850px;top: -110px;">
        </span>
      </div>
    </div>

    <script>
      $("#student_<%= student.id %>").hover(function(){
        $("#ana_<%= student.id %>").show();
      })
    </script>
  <% end %>
</div>
