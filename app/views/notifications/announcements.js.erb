$('#posts').html('<%= escape_javascript render :partial => '/profiles/show'%>');
<% if params[:post] == 'announcement' %>
  $('.announcements').addClass('active_button');
  $('.assignments').removeClass('active_button');
  $('.profile').removeClass('active_button');
<% elsif params[:post] == 'assignment' %>
  $('.assignments').addClass('active_button');
  $('.announcements').removeClass('active_button');
  $('.profile').removeClass('active_button');
<% else %>
  $('.profile').addClass('active_button');
  $('.assignments').removeClass('active_button');
  $('.announcements').removeClass('active_button');
<% end %>
$('.replies').removeClass('active_button');
$('.class').removeClass('active_button');