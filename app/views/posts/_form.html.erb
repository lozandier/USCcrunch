<div id="UserComment">
  <%= form_for @post, :url => user_posts_path(@user),:html => {:multipart => true, :method => 'POST'},:remote => true do |f| %>
    <table>
      <tr>
        <td><%= f.text_area :body, :cols => 30, :rows => 1, :placeholder => "Compose Post Here.." %>
          <%= validation_error(@post.errors['body'])%></td>
      </tr>
      <tr>
        <td valign="bottom"><%= f.submit "Post", :class => 'btn'%></td>
      </tr>
    </table>
  <% end %>
</div>