<div class="span4">
  <div class="box_l1_hp">
    <%= image_tag(current_user.avatar.url(:original),:width => '50px;',:height => '50px;' , :class => "profile_pic img-rounded") %>
    <h3 class="profile_name"><%= current_user.username %></h3>
    <%= link_to "View my profile page", profile_path(current_user), :class => "view_my_profile_page" %>
    <div class="posts_count">
      <%= current_user.tweets.count %><br />POSTS
    </div>
    <div class="replies_count">
      <%= current_user.tweets.count %><br />REPLIES
    </div>
    <input class="compose_new_post" type="text" placeholder="Compose new Post..." />
  </div>

  <div class="box_l2_hp">
    This box has not been decided what to be used for.
  </div>

  <div class="box_l3_hp">
    <div class="link_box">
      &#169; &nbsp 2012 &nbsp EduPosts &nbsp More links go here
    </div>
  </div>
</div>

<div class="span8">
  <%= render :partial => 'index' %>
</div>
