<div id="Tweet-summary">
  <div id="title">Tweets
    <span id="success" style="display: none;color: green;float: right;">Successfully deleted this tweet.</span>
  </div>
  <% if @tweets.present? %>
    <% for tweet in @tweets %>
      <div id="tweet_<%= tweet.id %>">
        <table>
          <tr>
            <td>
              <%= image_tag tweet.user.avatar.url(:original), :style=>"width:25px;height: 25px;border-radius: 5px;')" %>
            </td>
            <td valign="top"><%= link_to_function tweet.user.username, "profile_summary(#{tweet.user.id})", :remote => true %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= tweet.body %></td>
          </tr>
        </table>
        <% if tweet.user.id == current_user.id %>
          <div id="delete_<%= tweet.id %>" style="float: right;margin: -17px 1px;display: none;">
            <%= link_to "Delete", user_tweet_path(current_user.id,tweet), :method => :delete, :remote => true,:confirm => "Are you Sure..", :class => 'button medium red' %>
          </div>
          <script>
            $('#tweet_<%= tweet.id %>').hover(function(){
              $('#delete_<%= tweet.id %>').show();
            });
            $('#tweet_<%= tweet.id %>').mouseleave(function(){
              $('#delete_<%= tweet.id %>').hide();
            });
          </script>
        <% end %>
        <hr />
      </div>
    <% end %>
  <% else %>
    <span style="color: red;font-size: 15px;left: 166px;position: relative;top: 17px;">No Tweets.</span>
  <% end %>
</div>

