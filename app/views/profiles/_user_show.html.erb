<div class="row-fluid">

  <div class="span12">
    <div class="profile_box_right">
      <% if @user.id == current_user.id %>
        <%= link_to 'Edit Profile',edit_profile_path(current_user), :class => 'btn' %>
      <% else %>
        <div class="btn-group other_profile_options_button">
          <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
            <img src="/assets/dude.png" width="15px" height="20px"/>
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li><a href="#">Post to @GregJohnson</a></li>
            <li><a href="#">Report @GregJohnson</a></li>
          </ul>
        </div>
      <% end %>
      <div class="tweets_num"><span class="black_bold"><%= @user.tweets.where("reply IS NULL").count %></span>&nbspPOSTS</div>
      <hr class="gray_divider" width="80px"/>
      <div class="following_num"><span class="black_bold"><%= @user.tweets.where("reply IS NOT NULL").count %></span>&nbspREPLIES</div>
      <% if @user.id == current_user.id %>
        <hr class="gray_divider" width="80px"/>
        <div class="following_num">&nbspBADGES</div>
      <% end %>

    </div>



    <div class="box_c1_mp extended">
      <div class="cover_photo">
        <div class="cover_photo_button"><a href="javascript:changeBGImage(0)">switch theme</a></div>
      </div>
      <%= image_tag(@user.avatar.url(:original) , :width => '180px;', :height => '180px;', :class => "profile_pic img-rounded for_cover_photo") %>
      <h2 class="profile_name"><%= @user.username %></h2>
      <h4 class="at_name">@<%= @user.username %></h4>
      <br/>
      <p class="bio"><%= @user.bio %></p>
    </div>

  </div>
</div>