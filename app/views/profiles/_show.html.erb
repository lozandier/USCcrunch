<div class="row-fluid">

  <div class="span4">
    <% if @user.id != current_user.id %>
      <div class="box_l1_up">
        <div class="post_to_box">
          <h5>Post to <%= @user.username %></h5>
          <%= render :partial => 'tweets/form'%>
        </div>
      </div>
    <% end %>

    <div class="box_l2_hp">
    			This box has not been decided what to be used for.
    </div>

    <div class="box_l3_hp">
      <div class="link_box">
        &#169; &nbsp 2012 &nbsp EduPosts &nbsp More links go here
      </div>
    </div>

  </div>

  <div class="span8">
    <div class="box_r1_hp">
      <h2 class="posts_title">Posts</h2>
      <hr />
      <% if @tweets.present? %>
        <% for tweet in @tweets %>
          <div class="posts_box">
            <div style="float:left;clear:both;"><%= image_tag tweet.user.avatar.url(:original), :width => "50px;", :height => "50px;", :class => "profile_pic img-rounded" %></div>
            <div class="post" style="border-bottom: 1px solid grey;height: auto;">
              <h5 class="post_name"><%= tweet.user.username %></h5>
              <div class="post_at">&nbsp<%= tweet.user.email %></div>
              <div class="post_time"><%= time_ago_in_words(tweet.created_at) %></div>
              <div class="post_text"><%= tweet.body %></div>
              <div class="action_row">
                <a href="#">Expand</a>
                &nbsp&nbsp
                <img src="/assets/reply_icon.png" height="10px" width="10px"/>&nbsp<a href="#">Reply</a>
                &nbsp&nbsp
                <img src="/assets/repost_icon.png" height="10px" width="10px"/>&nbsp<a href="#">Repost</a>
                &nbsp&nbsp
                <img src="/assets/favorite_icon.png" height="10px" width="10px"/>&nbsp<a href="#">Favorite</a>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <span style="color: red;font-size: 15px;left: 376px;position: relative;top: 17px;">No Posts.</span>
      <% end %>
    </div>

  </div>

</div>