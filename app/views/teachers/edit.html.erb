<div class="main">
  <div class="container"><br/>
    <br/>
    <div class="span5" style="position: relative;left: 310px;">
      <strong>Create an account if you are new here:</strong>
      <br/>
      <br/>
      <%= form_for(@teacher, :url => student_path(@teacher), :html => { :method => :put }) do |f| %>
        <%= f.hidden_field :reset_password_token %>
        <div class="control-group">
          <label class="control-label" for="inputEmail">Email or Username</label>
          <div class="controls">
            <%= f.email_field :email, :class => 'input-xlarge', :id => "inputEmail", :placeholder => "Email", :readonly => true %>
            <%= validation_error(@teacher.errors["email"]) %>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="inputPassword">User Name</label>
          <div class="controls">
            <%= f.text_field :username, :class => 'input-xlarge', :placeholder => "Username",:onBlur => "get_username(this)" %>
            <br /><em id="username_error" style="color: #CC3333; text-transform: none;font-family: Calibri-Bold;font-size:12px;"></em>
            <%= validation_error(@teacher.errors["username"]) %>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="inputPassword">Create a password</label>
          <div class="controls">
            <%= f.password_field :password, :class => 'input-xlarge', :id => "inputPassword", :placeholder => "Password" %>
            <%= validation_error(@teacher.errors["password"]) %>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="inputPassword">Confirm password</label>
          <div class="controls">
            <%= f.password_field :password_confirmation, :class => 'input-xlarge', :id => "inputPassword", :placeholder => "Password" %>
            <%= validation_error(@teacher.errors["password_confirmation"]) %>
          </div>
        </div>
        <div class="control-group">
          <div class="controls">
            <%=f.check_box :terms_of_service %>I agree terms and conditions
            <%= validation_error(@teacher.errors["terms_of_service"]) %>
          </div>
          <button type="submit" class="btn">Create account</button>
        </div>
      </div>
    <% end %>
  </div><!--/span5-->
</div>