<div id="Tweet-summary" style="float: left;
     left: 14px;top: 3px;
     position: relative;
     width: 100%;">
  <div id="title">Students</div>
  <% if @students.present? %>
    <table border="1" width="100%">
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>User Name</th>
        <th>Status</th>
        <th></th>
      </tr>
      <% for school in @students %>
        <tr style="text-align: center;">
          <td><%= school.first_name %></td>
          <td><%= school.last_name %></td>
          <% if school.reset_password_token == nil %>
            <td><%= link_to school.email, school_student_path(@school, school) %></td>
          <% else %>
            <td><%= school.email %></td>
          <% end %>
          <td><%= school.username %></td>
          <td>
            <% if school.reset_password_token == nil %>
              Joined
            <% else %>
              Invitation Sent
            <% end %>
          </td>
          <td>
            <%= link_to "View Posts", posts_school_student_path(@school, school)%> |
            <%= link_to "Delete", student_path(school), :remote => true, :method => :delete, :confirm => "Are You Sure.." %>
          </td>
        </tr>
      <% end %>
    </table>
  <% else %>
    <span style="color: red;font-size: 15px;left: 166px;position: relative;top: 17px;">No Students.</span>
  <% end %>
</div><br />
