    <%= link_to "Privacy", privacy_policy_home_index_path, :class => "grey_text" %> &#183;
    <%= link_to "Blog", "http://blog.eduposts.com", :class => "grey_text",:target => "_blank" %> &#183;
    <%= link_to image_tag("/assets/twitter_icon.png",:height => "30px", :width => "30px"), "https://twitter.com/iedupost", :target => "blank" %>&nbsp&#183;&nbsp
    <%= link_to image_tag("/assets/facebook_icon.png",:height => "30px", :width => "30px"), " https://www.facebook.com/edupost", :target => "blank" %>&nbsp&#183;&nbsp
    <%= link_to image_tag("/assets/email_icon.png",:height => "30px", :width => "30px"), "mailto:andrew@eduposts.com" %>&nbsp&nbsp
