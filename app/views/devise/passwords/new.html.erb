<div class="container">

  <div class="row">
    <div class="span10 sign_up_column">
      <div class="sign_up_content">
        <h2>Forgot your password?</h2>
        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
          <%= devise_error_messages! %>
          <div class="controls">
            <%= f.email_field :email, :class => 'span5', :placeholder => "Email" %>
          </div>
          <%= f.submit "Recover", :class => "btn btn-warning span5" %>
        </div> <!--/sign_up_content -->
      </div>
    <% end %>

  </div>

</div>